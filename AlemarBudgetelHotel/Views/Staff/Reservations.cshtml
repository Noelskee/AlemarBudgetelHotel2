@model IEnumerable<AlemarBudgetelHotel.Models.Reservation>

@{
    ViewData["Title"] = "All Reservations";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar-alt"></i> All Reservations</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Customer</th>
                                <th>Phone</th>
                                <th>Room</th>
                                <th>Check-in</th>
                                <th>Check-out</th>
                                <th>Duration</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Payment</th>
                                <th>GCash Ref</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var res in Model)
                            {
                                <tr>
                                    <td><strong>#@res.ReservationId</strong></td>
                                    <td>@res.Customer?.FullName</td>
                                    <td>@res.Customer?.PhoneNumber</td>
                                    <td><span class="badge bg-secondary">@res.Room?.RoomNumber</span></td>
                                    <td>@res.CheckInDateTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>@res.CheckOutDateTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        @if (res.Duration == DurationOption.ThreeHours) { <span>3 Hours</span> }
                                        else if (res.Duration == DurationOption.TwelveHours) { <span>12 Hours</span> }
                                        else { <span>24 Hours</span> }
                                    </td>
                                    <td><strong>â‚±@res.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (res.Status == ReservationStatus.Pending)
                                        { <span class="badge bg-warning">Pending</span> }
                                        else if (res.Status == ReservationStatus.Confirmed)
                                        { <span class="badge bg-success">Confirmed</span> }
                                        else if (res.Status == ReservationStatus.CheckedIn)
                                        { <span class="badge bg-info">Checked In</span> }
                                        else if (res.Status == ReservationStatus.CheckedOut)
                                        { <span class="badge bg-secondary">Checked Out</span> }
                                        else
                                        { <span class="badge bg-danger">@res.Status</span> }
                                    </td>
                                    <td>
                                        @if (res.Payment != null)
                                        {
                                            if (res.Payment.Status == PaymentStatus.Completed)
                                            { <span class="badge bg-success">Paid</span> }
                                            else
                                            { <span class="badge bg-warning">Pending</span> }
                                        }
                                        else
                                        { <span class="badge bg-danger">No Payment</span> }
                                    </td>
                                    <td>
                                        @if (res.Payment != null)
                                        {
                                            <code>@res.Payment.GCashReferenceNumber</code>
                                        }
                                        else
                                        { <span class="text-muted">-</span> }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <a href="/Staff/ReservationDetails/@res.ReservationId" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (res.Status == ReservationStatus.Pending && res.Payment != null)
                                            {
                                                <form method="post" asp-controller="Staff" asp-action="VerifyPayment" style="display:inline">
                                                    <input type="hidden" name="reservationId" value="@res.ReservationId" />
                                                    <button type="submit" class="btn btn-sm btn-warning" title="Verify Payment">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (res.Status == ReservationStatus.Confirmed)
                                            {
                                                <form method="post" asp-controller="Staff" asp-action="CheckIn" style="display:inline">
                                                    <input type="hidden" name="reservationId" value="@res.ReservationId" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Check In">
                                                        <i class="fas fa-sign-in-alt"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (res.Status == ReservationStatus.CheckedIn)
                                            {
                                                <form method="post" asp-controller="Staff" asp-action="CheckOut" style="display:inline">
                                                    <input type="hidden" name="reservationId" value="@res.ReservationId" />
                                                    <button type="submit" class="btn btn-sm btn-secondary" title="Check Out">
                                                        <i class="fas fa-sign-out-alt"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h4>No Reservations Found</h4>
                </div>
            }
        </div>
    </div>
</div>
