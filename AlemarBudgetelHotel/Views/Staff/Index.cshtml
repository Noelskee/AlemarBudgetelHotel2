@model IEnumerable<AlemarBudgetelHotel.Models.Reservation>

@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tachometer-alt"></i> Staff Dashboard</h2>
        <span class="badge bg-primary fs-6">
            <i class="fas fa-user-tie"></i> @Context.Session.GetString("StaffName")
            - @Context.Session.GetString("StaffRole")
        </span>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-2x text-primary mb-2"></i>
                    <h3 class="text-primary">@ViewBag.TodayReservations</h3>
                    <p class="mb-0">Today's Reservations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h3 class="text-warning">@ViewBag.PendingReservations</h3>
                    <p class="mb-0">Pending Reservations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-door-open fa-2x text-success mb-2"></i>
                    <h3 class="text-success">@ViewBag.AvailableRooms</h3>
                    <p class="mb-0">Available Rooms</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-bed fa-2x text-danger mb-2"></i>
                    <h3 class="text-danger">@ViewBag.OccupiedRooms</h3>
                    <p class="mb-0">Occupied Rooms</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Reservations -->
    <div class="card shadow">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list"></i> Recent Reservations</h5>
            <a href="/Staff/Reservations" class="btn btn-primary btn-sm">View All</a>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Customer</th>
                                <th>Room</th>
                                <th>Check-in</th>
                                <th>Check-out</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Payment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var res in Model)
                            {
                                <tr>
                                    <td><strong>#@res.ReservationId</strong></td>
                                    <td>
                                        <div>@res.Customer?.FullName</div>
                                        <small class="text-muted">@res.Customer?.PhoneNumber</small>
                                    </td>
                                    <td>@res.Room?.RoomNumber</td>
                                    <td>@res.CheckInDateTime.ToString("MMM dd hh:mm tt")</td>
                                    <td>@res.CheckOutDateTime.ToString("MMM dd hh:mm tt")</td>
                                    <td>₱@res.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @if (res.Status == ReservationStatus.Pending)
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else if (res.Status == ReservationStatus.Confirmed)
                                        {
                                            <span class="badge bg-success">Confirmed</span>
                                        }
                                        else if (res.Status == ReservationStatus.CheckedIn)
                                        {
                                            <span class="badge bg-info">Checked In</span>
                                        }
                                        else if (res.Status == ReservationStatus.CheckedOut)
                                        {
                                            <span class="badge bg-secondary">Checked Out</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@res.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (res.Payment != null)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Paid</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Unpaid</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Staff/ReservationDetails/@res.ReservationId" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (res.Status == ReservationStatus.Confirmed)
                                        {
                                            <form method="post" asp-controller="Staff" asp-action="CheckIn" style="display:inline">
                                                <input type="hidden" name="reservationId" value="@res.ReservationId" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="fas fa-sign-in-alt"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (res.Status == ReservationStatus.CheckedIn)
                                        {
                                            <form method="post" asp-controller="Staff" asp-action="CheckOut" style="display:inline">
                                                <input type="hidden" name="reservationId" value="@res.ReservationId" />
                                                <button type="submit" class="btn btn-sm btn-secondary">
                                                    <i class="fas fa-sign-out-alt"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No reservations found</p>
                </div>
            }
        </div>
    </div>
</div>
