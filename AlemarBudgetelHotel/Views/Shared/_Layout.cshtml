@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlemarBudgetelHotel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlemarBudgetelHotel.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">

                <!-- ✅ Logo -->
                <a class="navbar-brand" asp-controller="Customer" asp-action="Index">
                    Alemar Budgetel Hotel
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        @if (Context.Session.GetInt32("CustomerId") != null)
                        {
                            <!-- Logged-in menu -->
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Customer"
                                   asp-action="Index">
                                    Home
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Customer"
                                   asp-action="Rooms">
                                    Browse Rooms
                                </a>
                            </li>

                            <li class="nav-item">
                                <span class="nav-link">
                                    @Context.Session.GetString("CustomerName")
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Customer"
                                   asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Guest menu -->
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Customer"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Customer"
                                   asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            <p>&copy; 2024 Alemar Budgetel Hotel. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
