@model IEnumerable<AlemarBudgetelHotel.Models.HousekeepingTask>
@using AlemarBudgetelHotel.Models
@using HKTaskStatus = AlemarBudgetelHotel.Models.TaskStatus

@{
    ViewData["Title"] = "Housekeeping Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-broom"></i> Housekeeping</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTaskModal">
            <i class="fas fa-plus"></i> New Task
        </button>
    </div>

    <!-- Task Status Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning">@(Model?.Count(t => t.Status == HKTaskStatus.Pending) ?? 0)</h3>
                    <p class="mb-0">Pending Tasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h3 class="text-info">@(Model?.Count(t => t.Status == HKTaskStatus.InProgress) ?? 0)</h3>
                    <p class="mb-0">In Progress</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">@(Model?.Count(t => t.Status == HKTaskStatus.Completed) ?? 0)</h3>
                    <p class="mb-0">Completed Today</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary">@(Model?.Count() ?? 0)</h3>
                    <p class="mb-0">Total Tasks</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks List -->
    <div class="card">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">All Tasks</h5>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-secondary active">All</button>
                    <button class="btn btn-sm btn-outline-warning">Pending</button>
                    <button class="btn btn-sm btn-outline-info">In Progress</button>
                    <button class="btn btn-sm btn-outline-success">Completed</button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Task ID</th>
                                <th>Room</th>
                                <th>Description</th>
                                <th>Priority</th>
                                <th>Assigned To</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model.OrderByDescending(t => t.CreatedAt))
                            {
                                <tr>
                                    <td><strong>#@task.TaskId</strong></td>
                                    <td>
                                        <i class="fas fa-bed"></i> Room @task.Room?.RoomNumber
                                    </td>
                                    <td>@task.TaskDescription</td>
                                    <td>
                                        @if (task.Priority == TaskPriority.Urgent)
                                        {
                                            <span class="badge bg-danger">Urgent</span>
                                        }
                                        else if (task.Priority == TaskPriority.High)
                                        {
                                            <span class="badge bg-warning">High</span>
                                        }
                                        else if (task.Priority == TaskPriority.Medium)
                                        {
                                            <span class="badge bg-info">Medium</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Low</span>
                                        }
                                    </td>
                                    <td>
                                        @if (task.AssignedTo != null)
                                        {
                                            <span><i class="fas fa-user"></i> @task.AssignedTo.FullName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unassigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (task.Status == HKTaskStatus.Completed)
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else if (task.Status == HKTaskStatus.InProgress)
                                        {
                                            <span class="badge bg-info">In Progress</span>
                                        }
                                        else if (task.Status == HKTaskStatus.Pending)
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Cancelled</span>
                                        }
                                    </td>
                                    <td>@task.CreatedAt.ToString("MMM dd, hh:mm tt")</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-success" title="Complete">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
                    <h4>No Tasks Yet</h4>
                    <p class="text-muted">Create housekeeping tasks to manage room cleaning and maintenance</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- New Task Modal -->
<div class="modal fade" id="newTaskModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Room</label>
                        <select class="form-select" required>
                            <option value="">Select Room</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Task Description</label>
                        <textarea class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Priority</label>
                        <select class="form-select">
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                            <option value="Urgent">Urgent</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Assign To</label>
                        <select class="form-select">
                            <option value="">Unassigned</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Create Task</button>
            </div>
        </div>
    </div>
</div>
