@{
    ViewData["Title"] = "Reports";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-bar"></i> Reports</h2>
        <button class="btn btn-outline-primary">
            <i class="fas fa-download"></i> Export All
        </button>
    </div>

    <!-- Report Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card report-card">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                    <h5>Revenue Report</h5>
                    <p class="text-muted">Total revenue and trends</p>
                    <button class="btn btn-success btn-sm">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card report-card">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                    <h5>Occupancy Report</h5>
                    <p class="text-muted">Room occupancy rates</p>
                    <button class="btn btn-primary btn-sm">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card report-card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-info mb-3"></i>
                    <h5>Customer Report</h5>
                    <p class="text-muted">Customer statistics</p>
                    <button class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card report-card">
                <div class="card-body text-center">
                    <i class="fas fa-credit-card fa-3x text-warning mb-3"></i>
                    <h5>Payment Report</h5>
                    <p class="text-muted">Payment methods & trends</p>
                    <button class="btn btn-warning btn-sm">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="card mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">Generate Custom Report</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">From Date</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label">To Date</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Report Type</label>
                    <select class="form-select">
                        <option>Revenue</option>
                        <option>Occupancy</option>
                        <option>Customers</option>
                        <option>Payments</option>
                    </select>
                </div>
            </div>
            <div class="text-end mt-3">
                <button class="btn btn-primary">
                    <i class="fas fa-chart-line"></i> Generate Report
                </button>
            </div>
        </div>
    </div>

    <!-- Sample Chart -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">Revenue Overview</h5>
        </div>
        <div class="card-body">
            <div class="text-center py-5">
                <i class="fas fa-chart-area fa-4x text-muted mb-3"></i>
                <h4>No Data Available</h4>
                <p class="text-muted">Generate a report to view charts and analytics</p>
            </div>
        </div>
    </div>
</div>

<style>
    .report-card {
        transition: transform 0.2s;
    }
    .report-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
</style>
