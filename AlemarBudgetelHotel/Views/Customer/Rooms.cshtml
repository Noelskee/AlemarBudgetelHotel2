@model IEnumerable<AlemarBudgetelHotel.Models.Room>

@{
    ViewData["Title"] = "Available Rooms";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-bed"></i> Available Rooms</h1>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Room Type</label>
                    <select name="roomType" class="form-select">
                        <option value="">All Types</option>
                        <option value="Single">Single</option>
                        <option value="Double">Double</option>
                        <option value="Standard">Standard</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="SuperDeluxe">Super Deluxe</option>
                        <option value="SuperDuper">Super Duper</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Duration</label>
                    <select name="duration" class="form-select">
                        <option value="">All Durations</option>
                        <option value="3">3 Hours</option>
                        <option value="12">12 Hours</option>
                        <option value="24">24 Hours</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Rooms Grid -->
    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card room-card h-100">
                    <div class="room-image-placeholder">
                        <i class="fas fa-bed fa-5x text-muted"></i>
                        <div class="room-type-badge">@room.Type</div>
                        <div class="room-status-badge badge-@room.Status.ToString().ToLower()">
                            @room.Status
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Room @room.RoomNumber</h5>
                        <p class="text-muted">Floor @room.Floor | Capacity: @room.Capacity</p>
                        <p class="card-text">@room.Description</p>
                        
                        <div class="pricing-table mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fas fa-clock"></i> 3 Hours:</span>
                                <strong class="text-primary">₱@room.Price3Hours.ToString("N2")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fas fa-clock"></i> 12 Hours:</span>
                                <strong class="text-primary">₱@room.Price12Hours.ToString("N2")</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span><i class="fas fa-clock"></i> 24 Hours:</span>
                                <strong class="text-primary">₱@room.Price24Hours.ToString("N2")</strong>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        @if (room.Status == RoomStatus.Available)
                        {
                            <a href="/Customer/BookRoom?roomId=@room.RoomId" class="btn btn-primary w-100">
                                <i class="fas fa-calendar-check"></i> Book This Room
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100" disabled>
                                Not Available
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
